pipeline {
    agent any
    stages {
        stage('copy Repository contents') {
            steps {
                script {
                    // Clone the repository
                    sh 'git clone --bare https://github.com/Raghuds48/duplicate-repo-history.git'
                    
                    // Use 'dir' to set the working directory for subsequent steps
                    dir('duplicate-repo-history') {
                        // List contents to verify
                        sh 'ls'
                        
                        // Push to the new repository
                        sh 'git push --mirror https://github.com/Raghuds48/wisecow.git'
                    }
                }
            }
        }
    }
}
