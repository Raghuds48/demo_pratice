pipeline {
    agent any

    stages {
        stage('Create Image') {
            steps {
                sh '''
            docker image build -t app-image:1.0 ${WORKSPACE}/docker/task6'
                '''
            }
        }
        stage('Tag Image') {
            steps {
                sh 'docker image tag app-image:latest raghavendrasak78/app-image:1.0'

            }
        }
        stage('Push Image to Docker Hub') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'docker-hub-credentials', passwordVariable: 'DOCKER_PASSWORD', usernameVariable: 'DOCKER_USERNAME')]) {
                    sh 'docker login -u $DOCKER_USERNAME -p $DOCKER_PASSWORD'
                    sh 'docker push raghavendrasak78/app-image:1.0'
                }
            }
        }
        stage('Pull Image on Slave Machine') {
            steps {
                sshagent(['slave-machine-credentials']) {
                    sh 'ssh slave-machine docker pull raghavendrasak78/app-image:1.0''
                }
            }
        }
    }
}
